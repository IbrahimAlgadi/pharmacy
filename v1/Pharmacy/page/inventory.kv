#: include includes/colors.kv

#: import C kivy.utils.get_color_from_hex

#:import MDTabbedPanel kivymd.tabs.MDTabbedPanel
#:import MDTab kivymd.tabs.MDTab


<SideButton@Button>:
    markup: True
    background_color: C(sidebar_color)
    background_normal: ''

<Sep@Label>:
    size_hint_y: None
    height: '3px'

<Inventory>:
    BoxLayout:
        size_hint_x: None
        orientation: 'vertical'
        width: '250px'
        SideButton:
            on_press:
                root.parent.parent.transition.direction="right"
                root.parent.parent.current = 'dashboard'
            BoxLayout:
                orientation: 'vertical'
                pos: self.parent.pos
                size: self.parent.size
                Label:
                    markup: True
                    text: '[size={}][font=PICTO]7[/font][/size]'.format(int(self.width/5))
                Label:
                    markup: True
                    text: '[size={}]Dashboard[/size]'.format(int(self.width/8))

        Sep:
        SideButton:
            on_press:
                root.parent.parent.transition.direction="right"
                root.parent.parent.current = 'sales'
            BoxLayout:
                orientation: 'vertical'
                pos: self.parent.pos
                size: self.parent.size
                Label:
                    markup: True
                    text: '[size={}][font=PICTO]6[/font][/size]'.format(int(self.width/5))
                Label:
                    markup: True
                    text: '[size={}]Sales[/size]'.format(int(self.width/8))
        Sep
        SideButton:
            id: inventoryButton
            BoxLayout:
                orientation: 'vertical'
                pos: self.parent.pos
                size: self.parent.size
                Label:
                    markup: True
                    text: '[color={}][b][size={}][font=PICTO]\[/font][/size][/b][/color]'.format(sidebar_color,int(self.width/5))
                Label:
                    markup: True
                    text: '[color={}][size={}][b]Inventory[/b][/size][/color]'.format(sidebar_color,int(self.width/8))
        Sep
        SideButton:
            on_press:
                root.parent.parent.transition.direction="left"
                root.parent.parent.current = 'settings'
            BoxLayout:
                orientation: 'vertical'
                pos: self.parent.pos
                size: self.parent.size
                Label:
                    markup: True
                    text: '[size={}][font=rap]Ã‘[/font][/size]'.format(int(self.width/5))
                Label:
                    markup: True
                    text: '[size={}]Settings[/size]'.format(int(self.width/8))

    BoxLayout:
        MDTabbedPanel:
            tab_width: '200px'
            MDTab:
                name: "products"
                text: "Products"
                halign: 'center'
                width: '100px'
                BoxLayout:
                    orientation: 'vertical'
                    spacing: '3px'
                    padding: '3px'
                    BoxLayout:
                        GridLayout:
                            cols: 1
                            size_hint_x: None
                            width: '300px'
                            spacing: '10px'
                            padding: '10px'
                            MDTextField:
                                hint_text: 'Brand Name'
                            MDTextField:
                                hint_text: 'Generic Name'
                            MDTextField:
                                hint_text: 'Quantity Per Unit'
                            MDTextField:
                                hint_text: 'Unit Price'
                            MDTextField:
                                hint_text: 'Category'
                            BoxLayout:
                                size_hint_y: None
                                height: '40px'
                                MDIconButton:
                                    icon: 'calendar'
                                    on_release: root.products_date_pick()
                                MDTextField:
                                    id: products_date_label
                                    hint_text: 'Expiry Date'
                                    disabled: True

                            MDTextField:
                                hint_text: 'Status'
                            BoxLayout:
                                spacing: '3px'
                                Button:
                                    size_hint_y: None
                                    height: '60px'
                                    text: 'Add'
                                    background_normal: ''
                                    background_color: C(color_primary)
                                Button:
                                    size_hint_y: None
                                    height: '60px'
                                    text: 'delete'
                                    background_normal: ''
                                    background_color: C(danger)
                        Button:
                            text: 'Table'

            MDTab:
                name: "categories"
                text: "Categories"
                BoxLayout:
                    orientation: 'vertical'
                    spacing: '3px'
                    padding: '3px'
                    BoxLayout:
                        GridLayout:
                            cols: 1
                            size_hint_x: None
                            width: '300px'
                            spacing: '10px'
                            padding: '10px'
                            MDTextField:
                                hint_text: 'Name'
                                helper_text: "Category Name Shoudn't Be Empty!"
                                required: True
                                helper_text_mode: "on_error"
                            BoxLayout:
                                spacing: '3px'
                                Button:
                                    size_hint_y: None
                                    height: '60px'
                                    text: 'Add'
                                    background_normal: ''
                                    background_color: C(color_primary)
                                Button:
                                    size_hint_y: None
                                    height: '60px'
                                    text: 'delete'
                                    background_normal: ''
                                    background_color: C(danger)
                        Button:
                            text: 'Table'
            MDTab:
