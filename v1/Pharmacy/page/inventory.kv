                    BoxLayout:
                        GridLayout:
                            cols: 1
                            size_hint_x: None
                            width: '300px'
                            spacing: '10px'
                            padding: '10px'
                            MDTextField:
                                hint_text: 'Name'
                            MDTextField:
                                hint_text: 'Address'
                            MDTextField:
                                hint_text: 'Contact'
                            BoxLayout:
                                spacing: '3px'
                                Button:
