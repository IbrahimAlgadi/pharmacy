                                    id: imports_date_label
                                    hint_text: 'Date'
                                    disabled: True
                            MDTextField:
                                hint_text: 'Supplier Name'
                            MDTextField:
                                hint_text: 'Status'

                        Button:
                            text: 'Table'
                    BoxLayout:
                        GridLayout:
                            cols: 1
                            size_hint_x: None
                            width: '300px'
                            spacing: '10px'
                            padding: '10px'
                            MDTextField:
                                hint_text: 'Import ID'
                            MDTextField:
                                hint_text: 'Product ID'
                            MDTextField:
                                hint_text: 'Quantity'
                            MDTextField:
                                hint_text: 'Unit Price'
                            BoxLayout:
                                spacing: '3px'
                                Button:
