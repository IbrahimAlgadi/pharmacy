<SideButton@Button>:
    markup: True
    background_color: C(sidebar_color)
    background_normal: ''

<Sep@Label>:
    size_hint_y: None
    height: '3px'

<Head@Label>:
    size_hint_y: None
    height: '40px'
    text_size: self.size
    padding_x: '5px'
    markup: True
    valign: 'middle'

<DataLabel>:
    text_size: self.size
    valign: 'middle'
    padding_x: '5px'

<DataWidget>:
    canvas.before:
        Color:
            rgba: C('#1976d2')
        Rectangle:
            pos: self.pos
            size: self.size

<DataWidget2>:
    canvas.before:
        Color:
            rgba: C('#2196f3')
        Rectangle:
            pos: self.pos
            size: self.size


