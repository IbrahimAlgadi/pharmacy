                                    text: 'Add'
                                    background_normal: ''
                                    background_color: C(color_primary)
                                Button:
                                    size_hint_y: None
                                    height: '60px'
                                    text: 'delete'
                                    background_normal: ''
                                    background_color: C(danger)
                        Button:
                            text: 'Table'
            MDTab:
                name: 'suppliers'
